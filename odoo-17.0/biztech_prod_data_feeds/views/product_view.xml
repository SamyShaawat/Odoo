<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- product.template inherit form view -->
    <record id="product_template_form_view_new_extended" model="ir.ui.view">
        <field name="name">product.template.inherit.view.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='sales']" position="inside">
                <group>
                    <field name="prod_condition"/>
                    <field name="product_website_link"/>
                    <field name="product_availability" invisible="1"/>
                    <field name="google_product_availability" invisible="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>