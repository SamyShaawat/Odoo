<?xml version="1.0"?>
<odoo>
    <data>
        <record id="purchase_order_report_customized" model="ir.actions.report">
            <field name="name">Purchase Order</field>
            <field name="model">purchase.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">alshajaraa_automation_tasks.custom_purchase_order_template</field>
            <field name="report_file">alshajaraa_automation_tasks.custom_purchase_order_template</field>
            <field name="multi" eval="True"/>
            <field name="binding_model_id" ref="purchase.model_purchase_order"/>
            <field name="binding_type">report</field>
        </record>

        <template id="alshajaraa_automation_tasks.custom_purchase_order_template">
            <t t-foreach="docs" t-as="doc">

                <t t-call="web.html_container">
                    <div class="header" style="border: 5px solid green; padding: 10px;">

                        <div>
                            <table style="width:100%">
                                <tr>
                                    <td style="">
                                        <div style="">
                                            <img height="100" width="100"
                                                 src="/alshajaraa_automation_tasks/static/src/img/Shajara.png"
                                            />
                                        </div>
                                    </td>
                                    <td style="">
                                        <div style="">
                                            <h5>Purchase Order:
                                                <span style="margin-right:20px"></span>
                                                <span t-field="doc.name"/>
                                            </h5>
                                            <h6>Order date:
                                                <span style="margin-right:20px">
                                                    <span t-field="doc.date_order"/>
                                                </span>
                                            </h6>
                                            <h6>Vendor:
                                                <span style="margin-right:20px">
                                                    <span t-field="doc.partner_id.name"/>
                                                </span>
                                            </h6>
                                            <h6>Planning delivery date:
                                                <span style="margin-right:20px">
                                                    <span t-field="doc.date_planned"/>
                                                </span>
                                            </h6>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <t t-call="web.internal_layout">
                        <div class="page">
                            <div style="border: 5px solid green; padding: 10px;"> <!-- Green Frame for content -->
                                <table class="table table-sm o_main_table" style="width: 100%;">
                                    <thead>
                                        <tr style="text-align: center;">
                                            <th>
                                                <strong>Description</strong>
                                            </th>
                                            <th>
                                                <strong>Qty</strong>
                                            </th>
                                            <th>
                                                <strong>UOM</strong>
                                            </th>
                                            <th>
                                                <strong>Unit Price</strong>
                                            </th>
                                            <th>
                                                <strong>Taxes</strong>
                                            </th>
                                            <th>
                                                <strong>Amount</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <t t-foreach="doc.order_line" t-as="line">
                                        <tbody>
                                            <tr style="text-align: center;">
                                                <td>
                                                    <span t-field="line.name"/>
                                                </td>
                                                <td>
                                                    <span t-field="line.product_qty"/>
                                                </td>
                                                <td>
                                                    <span t-field="line.product_uom.name"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-field="line.price_unit"/>
                                                </td>
                                                <td>
                                                    <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-field="line.price_subtotal"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </t>
                                </table>
                            </div>

                            <div id="total" class="row justify-content-end">
                                <div class="col-4">
                                    <table class="table table-sm o_sub_table">
                                        <tr class="border-black">
                                            <td style="width: 50%;">
                                                <strong>Subtotal</strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="doc.amount_untaxed"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Taxes</td>
                                            <td class="text-right">
                                                <span t-field="doc.amount_tax"/>
                                            </td>
                                        </tr>
                                        <tr class="border-black o_total">
                                            <td>
                                                <strong>Total</strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="doc.amount_total"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="footer">
                            <table style="width:100%">
                                <tr>
                                    <td class="text-center">
                                        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                                        <t t-if="doc.dest_address_id">
                                            <t t-set="information_block">
                                                <strong>Shipping address:</strong>
                                                <div t-if="doc.dest_address_id">
                                                    <div t-field="doc.dest_address_id"
                                                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'
                                                         name="purchase_shipping_address"/>
                                                </div>

                                            </t>
                                        </t>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>