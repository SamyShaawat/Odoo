<odoo>
    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Related Purchase Orders">
                    <field name="purchase_order_line_ids">
                        <tree>
                           <field name="product_id"/>
                           <field name="product_qty"/>
                           <field name="price_unit"/>
                           <field name="price_subtotal"/>
                        </tree>
                    </field>
                    <group>
                        <field name="total_cost_po" readonly="1"/>
                        <field name="profit" readonly="1"/>
                        <field name="profit_percentage" readonly="1" />
                    </group>

                </page>

                <page string="Commissions">
                    <group>
                        <field name="add_commission" invisible="state not in ['sale', 'done']"/>
                        <field name="commission_percentage"  widget="percentage" invisible="add_commission == False" readonly="0"/>
                        <field name="company_profit" readonly="1" invisible="add_commission == False"/>
<!--                        <field name="employees_profit" readonly="1" invisible="add_commission == False"/>-->
                        <field name="employees_commission" readonly="1" invisible="add_commission == False"/>
                    </group>
                    <field name="commission_lines" invisible="add_commission == False">
                        <tree editable="bottom">
                            <field name="employee_id"/>
                            <field name="amount_percentage"/>
                            <field name="flat_amount"/>
                        </tree>
                    </field>
                    <button name="action_create_journal_entry" type="object" string="Create Commission"
                            class="btn-primary" invisible="add_commission == False"
                            disabled =  "is_button_clicked == True"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
