<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="armchem_sale_order_partner_addresses_form" model="ir.ui.view">
        <field name="name">armchem.sale.order.partner.addresses.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="domain">[('parent_id', '=', False)]</attribute>
            </field>
            <field name="partner_shipping_id" position="attributes">
                <attribute name='domain'>['|', ('id','=', partner_id), '&amp;', ('parent_id','=', partner_id), ('type',
                    '=', 'delivery')]
                </attribute>
                <attribute name='context'>{'show_street': True}</attribute>
            </field>
            <field name="partner_invoice_id" position="attributes">
                <attribute name='domain'>['|', ('id','=', partner_id), '&amp;', ('parent_id','=', partner_id), ('type',
                    '=', 'invoice')]
                </attribute>
                <attribute name='context'>{'show_street': True}</attribute>
            </field>
        </field>
    </record>
</odoo>
