<?xml version="1.0" encoding="utf-8"?>
<odoo>


<template id="checkout_inherit2" inherit_id="website_sale.checkout">
    <!-- Hide Address Heading -->
    <xpath expr="//h3[text()='Address']" position="attributes">
        <attribute name="style">display:none</attribute>
    </xpath>

    <!-- Hide Billing Header -->
    <xpath expr="//h4[text()='Billing']" position="attributes">
        <attribute name="style">display:none</attribute>
    </xpath>

    <!-- Hide Billing Address Block -->
   <xpath expr="//t[@t-call='website_sale.row_addresses']" position="replace">
    </xpath>

    <!-- Replace Shipping Header -->
    <xpath expr="//h4[text()='Shipping']" position="replace">
        <h4>Shipping Address</h4>
    </xpath>

</template>



    <!--Hide Billing Address from payment & confirmation Page  -->
    <template id="hide_billing_address_in_paymentpage" name="Hide Billing address on payment and payment page"
              inherit_id="website_sale.address_on_payment">
        <xpath expr="//div[@id='shipping_and_billing']/div[1]" position="attributes">
            <attribute name='style'>display:none</attribute>
        </xpath>
    </template>

    <template id="hide_billing_address_in_confirmation" name="Hide Billing address on payment and confirmation page"
              inherit_id="website_sale.address_on_payment">
        <xpath expr="//div[hasclass('card-body')]/div[1]" position="attributes">
            <attribute name='style'>display:none</attribute>
        </xpath>
    </template>

    <template id="customize_address" inherit_id="website_sale.address">
        <xpath expr="//div[contains(@t-attf-class, 'div_state')]" position="attributes">
            <attribute name='t-attf-class'>form-group #{error.get('state_id') and 'has-error' or ''} col-md-6 div_state
                o_website_form_required_custom
            </attribute>
        </xpath>
        <xpath expr="//div[contains(@t-attf-class, 'div_state')]/select" position="attributes">
            <attribute name="required">required</attribute>
        </xpath>
        <xpath expr="//div[contains(@t-attf-class, 'div_country')]" position="attributes">
            <attribute name="t-attf-class">form-group #{error.get('country_id') and 'has-error' or ''} col-md-6
                div_country hidden
            </attribute>
        </xpath>
        <xpath expr="//div[contains(@t-attf-class, 'div_country')]/select//option[@t-att-value='c.id']"
               position="attributes">
            <attribute name="t-att-selected">c.id == (website.company_id.country_id.id or -1)</attribute>
        </xpath>
        <xpath expr="//div[@id='div_phone']" position="attributes">
            <attribute name='t-attf-class'>form-group #{error.get('phone') and 'has-error' or ''} col-md-6
                o_website_form_required_custom
            </attribute>
        </xpath>
        <xpath expr="//div[@id='div_phone']/input" position="attributes">
            <attribute name="required">required</attribute>
        </xpath>
        <xpath expr="//div[@id='div_phone']" position="after">
            <div t-attf-class="form-group #{error.get('mobile') and 'has-error' or ''} col-md-6" id="div_mobileno">
                <label class="control-label" for="mobile">Mobile</label>
                <input type="tel" name="mobile" class="form-control"
                       t-att-value="'mobile' in checkout and checkout['mobile']"/>
            </div>
        </xpath>
        <xpath expr="//input[@name='field_required']" position="attributes">
            <attribute name='t-att-value'>mode[1] == 'billing' and 'phone,name,state_id' or 'state_id'</attribute>
        </xpath>
    </template>

</odoo>
