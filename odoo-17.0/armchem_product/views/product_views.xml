<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="armchem_product_category_form_view" model="ir.ui.view">
            <field name="name">armchem.product.category.form.inherit</field>
            <field name="model">product.category</field>
            <field name="priority">5</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <label for="cat_commission"/>
                    <div name="cat_commission">
                        <field name="cat_commission" class="oe_inline"/>
                        %
                    </div>

                    <label for="max_discount"/>
                    <div name="max_discount">
                        <field name="max_discount" class="oe_inline"/>
                        %
                    </div>

                    <label for="price_margin"/>
                    <div name="price_margin">
                        <field name="price_margin" class="oe_inline"/>
                        %
                    </div>
                </field>

            </field>
        </record>

        <record id="armchem_product_template_form_view" model="ir.ui.view">
            <field name="name">armchem.product.template.form</field>
            <field name="model">product.template</field>
            <field name="priority">5</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <div name="pricing" position="after">
                    <label for="zone2_price" class="mt-1"/>
                    <div name="zone2_price">
                        <field name="zone2_price" class="oe_inline" widget='monetary'
                               options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                    </div>
                </div>
                <xpath expr="//group[@name='group_lots_and_weight']" position="inside">
                    <label for="length"
                           invisible="product_variant_count > 1 and is_product_variant == False"/>
                    <div class="o_row" name="weight"
                         invisible="product_variant_count > 1 and is_product_variant == False">
                        <field name="length"/>
                        <span>
                            <field name="inch_uom_name"/>
                        </span>
                    </div>
                    <label for="width"
                           invisible="product_variant_count > 1 and is_product_variant == False"/>
                    <div class="o_row" name="weight"
                         invisible="product_variant_count > 1 and is_product_variant == False">
                        <field name="width"/>
                        <span>
                            <field name="inch_uom_name"/>
                        </span>
                    </div>
                    <label for="high"
                           invisible="product_variant_count > 1 and is_product_variant == False"/>
                    <div class="o_row" name="weight"
                         invisible="product_variant_count > 1 and is_product_variant == False">
                        <field name="high"/>
                        <span>
                            <field name="inch_uom_name"/>
                        </span>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>