<odoo>
    <data>

        <record id="view_whatsapp_message_script_tree" model="ir.ui.view">
            <field name="name">whatsapp.message.script.tree</field>
            <field name="model">whatsapp.message.script</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="messages" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="view_whatsapp_message_script_form" model="ir.ui.view">
            <field name="name">whatsapp.message.script</field>
            <field name="model">whatsapp.message.script</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="messages"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_whatsapp_message_script" model="ir.actions.act_window">
            <field name="name">Scripts</field>
            <field name="res_model">whatsapp.message.script</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>