<odoo>
    <record id="user_profile_form" model="ir.ui.view">
        <field name="name">whatsapp.profile.form</field>
        <field name="model">whatsapp.profile</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <style>
                        .mobileTable .o_td_label {
                        height: 20px;
                        }
                        .mobtest .o_form_label {
                        font-weight: bold !important;
                        font-size: 14px !important;
                        }
                        .mobtest{
                        height: 438px;
                        }
                        .o_form_readonly .mobtest{
                        position: relative;
                        left: 102px;
                        top: 76px;
                        }
                        .o_form_readonly .mobtest .o_form_view .o_form_uri {
                        display: block;
                        }
                        .o_form_readonly .mobtest .o_form_label{
                        display: block;
                        }
                        .o_form_readonly .mobtest .btn.btn-primary {
                        display: block;
                        border-radius: 8px;
                        font-size: 12px;
                        margin: 9px 0px;
                        }
                        .o_form_readonly .mobtest .o_field_empty {
                        width: 43px !important;
                        display: block !important;
                        border: 1px solid #cac6c6;
                        width: 196px !important;
                        border-radius: 5px !important;
                        height: 21px;
                        }
                        .o_form_editable .mobtest {
                        width: 133px;
                        position: relative;
                        left: 102px;
                        top: 76px;
                        }
                        .o_form_editable .mobtest .o_field_widget, .o_field_widget input.o_input {
                        display: block;
                        text-align: inherit;
                        width: 196px !important;
                        border-radius: 8px;
                        }
                        .o_form_editable .mobtest .o_form_view .o_group .o_form_label {
                        margin-bottom: 13px;
                        }
                        .o_form_editable .mobtest .btn.btn-primary {
                        margin: 4px 0px;
                        border-radius: 8px;
                        font-size: 12px;
                        }
                    </style>
                    <group>
                        <group>
                            <field name="patient_name_id"/>
                            <field name="patient_whatsapp"/>
                            <field name="clinic_id"/>
                            <field name="last_message" invisible="1"/>
                        </group>
                        <group class="mobileTable">
                            <div class="mobileMocap" style="background: url('Aiassistant/static/MobileMockup-01.png') !important;
                                background-size: 395px 502px!important;background-repeat: no-repeat !important;background-position: -3px -40px!important;width: 333px;">
                                <div class="mobtest" style="">
                                    <label for="script"/>
                                    <field name="script"/>
                                    <field name="domain_script" invisible="1"/>
                                    <field name="message_script" domain="domain_script"/>
                                    <span>OR Type Message</span>
                                    <field name="message_box"/>
                                    <button name="send_message" string='Send Message' type="object"
                                            class="oe_highlight"/>
                                </div>
                            </div>
                        </group>
                        <field name="whats_app" widget="one2many">
                            <tree editable="bottom" decoration-success="sender != False"
                                  decoration-danger="receiver != False">
                                <field name="sender"/>
                                <field name="receiver"/>
                            </tree>
                        </field>
                    </group>


                </sheet>
            </form>
        </field>
    </record>

    <record id="user_profile_tree" model="ir.ui.view">
        <field name="name">whatsapp.profile.tree</field>
        <field name="model">whatsapp.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_name_id"/>
                <field name="last_message" invisible="1"/>
                <field name="patient_whatsapp"/>
            </tree>
        </field>
    </record>


    <record id="user_profile" model="ir.ui.view">
        <field name="name">whatsapp.profile.kanban</field>
        <field name="model">whatsapp.profile</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="patient_name_id"/>
                <field name="patient_whatsapp"/>
                <field name="last_message"/>
                <field name="message_box"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" style="display: flex; align-items: center;">
                            <div class="oe_kanban_details"
                                 style="display: flex; flex-direction: column; justify-content: center;">
                                <div class="oe_kanban_name">
                                    <strong>
                                        Patient Name :
                                        <field name="patient_name_id"/>
                                    </strong>
                                </div>
                                <div>
                                    <span>
                                        Whatsapp No :
                                        <field name="patient_whatsapp"/>
                                    </span>
                                </div>
                                <div>
                                    <span>
                                        Last Message :
                                        <field name="last_message" string="last message"/>
                                    </span>

                                    <span>
                                        <field name="message_box"/>
                                    </span>
                                </div>
                                <button name="action_send_msg" string='Reply' type="object"
                                        class="oe_highlight"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="action_user_profile" model="ir.actions.act_window">
        <field name="name">DashBoard</field>
        <field name="res_model">whatsapp.profile</field>
        <field name="res_model">whatsapp.profile</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>


</odoo>