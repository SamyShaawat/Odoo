<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="appointment_form_view">
            <field name="name">appointment</field>
            <field name="model">appointment.model</field>
            <field name="type">form</field>
            <field name="priority" eval="False"/>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="appoint_state" widget="statusbar" options="{'clickable':'1'}"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="appointment_date"/>
                                <field name="clinic_id"/>
                                <field name="domain" invisible="1"/>
                                <field name="doctor_id" domain="domain"/>
                                <field name="d_whatsapp_number" invisible="1"/>
                                <field name="patient_id"/>
                                <field name="p_whatsapp_number"/>
                            </group>
                            <group>

                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="appointment_tree_view">
            <field name="name">appointment</field>
            <field name="model">appointment.model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="patient_id"/>
                </tree>
            </field>
        </record>

        <record id="appointment_view_kanban" model="ir.ui.view">
            <field name="name">appointment.model</field>
            <field name="model">appointment.model</field>
            <field name="arch" type="xml">
                <kanban default_group_by="clinic_id" widget="time"
                        class="o_kanban_small_column o_kanban_project_tasks">
                    <field name="patient_id"/>
                    <field name="clinic_id"/>
                    <field name="p_whatsapp_number"/>
                    <field name="appoint_state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click" style="display: flex; align-items: center;">
                                <div class="oe_kanban_details"
                                     style="display: flex; flex-direction: column; justify-content: center;">
                                    <div class="oe_kanban_name">
                                        <strong>
                                            <field name="patient_id"/>
                                        </strong>
                                    </div>
                                    <div>
                                        <span>
                                            <field name="p_whatsapp_number"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record model="ir.actions.act_window" id="appointment_action">
            <field name="name">Appointment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">appointment.model</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p>
                    Here is a list of all the appointment created. You
                    can click on any record to get the detailed Information About these appointments.
                </p>
            </field>
        </record>


    </data>
</odoo>