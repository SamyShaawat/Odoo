<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_commission_end_of_year_line">
        <t t-foreach="lines" t-as="l">
            <tr class="o_data_row">
                <!-- User-->
                <td class="o_data_cell o_field_cell o_list_char o_readonly_modifier">
                    <span t-esc="l['user']"/>
                </td>
                <td class="o_data_cell o_field_cell o_list_char o_readonly_modifier">
                    <ul style="list-style-type:none;">
                        <li>
                            Orders
                        </li>
                        <li>
                            Inv
                        </li>
                        <li>
                            Goals
                        </li>
                    </ul>
                </td>
                <!-- DayCount-->
                <td class="o_data_cell o_field_cell o_list_number o_monetary_cell">
                    <ul style="list-style-type:none;">
                        <li>
                            <span t-esc="l['orders']['day_count']"/>
                        </li>
                        <li>
                            <span t-esc="l['invoices']['day_count']"/>
                        </li>
                        <li>
                            <span t-esc="l['goals']['day_count']"/>
                        </li>
                    </ul>
                </td>
                <!-- DaySold-->
                <td class="o_data_cell o_field_cell o_list_number o_monetary_cell">
                    <ul style="list-style-type:none;">
                        <li>
                            <span t-esc="l['orders']['day_sold']"/>
                        </li>
                        <li>
                            <span t-esc="l['invoices']['day_sold']"/>
                        </li>
                        <li>
                            <span t-esc="l['goals']['day_sold']"/>
                        </li>
                    </ul>
                </td>
                <!-- WeekCount-->
                <td class="o_data_cell o_field_cell o_list_number o_monetary_cell">
                    <ul style="list-style-type:none;">
                        <li>
                            <span t-esc="l['orders']['week_count']"/>
                        </li>
                        <li>
                            <span t-esc="l['invoices']['week_count']"/>
                        </li>
                        <li>
                            <span t-esc="l['goals']['week_count']"/>
                        </li>
                    </ul>
                </td>
                <!-- WeekSold-->
                <td class="o_data_cell o_field_cell o_list_number o_monetary_cell">
                    <ul style="list-style-type:none;">
                        <li>
                            <span t-esc="l['orders']['week_sold']"/>
                        </li>
                        <li>
                            <span t-esc="l['invoices']['week_sold']"/>
                        </li>
                        <li>
                            <span t-esc="l['goals']['week_sold']"/>
                        </li>
                    </ul>
                </td>
                <!-- MonthCount-->
                <td class="o_data_cell o_field_cell o_list_number o_monetary_cell">
                    <ul style="list-style-type:none;">
                        <li>
                            <span t-esc="l['orders']['month_count']"/>
                        </li>
                        <li>
                            <span t-esc="l['invoices']['month_count']"/>
                        </li>
                        <li>
                            <span t-esc="l['goals']['month_count']"/>
                        </li>
                    </ul>
                </td>
                <!-- MonthSold-->
                <td class="o_data_cell o_field_cell o_list_number o_monetary_cell">
                    <ul style="list-style-type:none;">
                        <li>
                            <span t-esc="l['orders']['month_sold']"/>
                        </li>
                        <li>
                            <span t-esc="l['invoices']['month_sold']"/>
                        </li>
                        <li>
                            <span t-esc="l['goals']['month_sold']"/>
                        </li>
                    </ul>
                </td>
                <!-- YearCount-->
                <td class="o_data_cell o_field_cell o_list_number o_monetary_cell">
                    <ul style="list-style-type:none;">
                        <li>
                            <span t-esc="l['orders']['year_count']"/>
                        </li>
                        <li>
                            <span t-esc="l['invoices']['year_count']"/>
                        </li>
                        <li>
                            <span t-esc="l['goals']['year_count']"/>
                        </li>
                    </ul>
                </td>
                <!-- YearSold-->
                <td class="o_data_cell o_field_cell o_list_number o_monetary_cell">
                    <ul style="list-style-type:none;">
                        <li>
                            <span t-esc="l['orders']['year_sold']"/>
                        </li>
                        <li>
                            <span t-esc="l['invoices']['year_sold']"/>
                        </li>
                        <li>
                            <span t-esc="l['goals']['year_sold']"/>
                        </li>
                    </ul>
                </td>
            </tr>
        </t>
    </template>

    <template id="report_commission_end_of_year">
        <div class="container-fluid o_commission_reports_page o_commission_reports_no_print">
            <t t-if="not lines">
                <span class="text-center">
                    <h1>No Records found</h1>
                </span>
            </t>
            <t t-if="lines">
                <div class="table-responsive">
                    <table class="table table-sm o_list_table table table-sm table-hover table-striped "
                           style="table-layout:auto">
                        <thead>
                            <tr>
                                <th class="text-left" colspan="2">Name</th>
                                <th class="o_monetary_cell o_list_number_th">DayCount</th>
                                <th class="o_monetary_cell o_list_number_th">DaySold</th>
                                <th class="o_monetary_cell o_list_number_th">WeekCount</th>
                                <th class="o_monetary_cell o_list_number_th">WeekSold</th>
                                <th class="o_monetary_cell o_list_number_th">MonthCount</th>
                                <th class="o_monetary_cell o_list_number_th">MonthSold</th>
                                <th class="o_monetary_cell o_list_number_th">YearCount</th>
                                <th class="o_monetary_cell o_list_number_th">YearSold</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-call="commission_reports.report_commission_end_of_year_line"/>
                        </tbody>
                    </table>
                </div>
            </t>
        </div>
    </template>

    <template id="report_commission_end_of_year_print">
        <html>
            <head>
                <base t-att-href="base_url"/>
                <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
                <t t-call-assets="commission_reports.assets_commission_reports" t-js="False"/>
            </head>
            <body class="o_account_reports_body_print">
                <br/>
                <span t-if="lines" align="center" class="o_report_heading">
                    <h4>End Of Year</h4>
                </span>
                <div class="o_row col-12">
                    <div class="col-11 text-right">Date From:
                        <span class="mr-2" t-esc="context['options']['date_from']"/>
                        Date To:
                        <span class="mr-2" t-esc="context['options']['date_to']"/>
                    </div>
                </div>
                <br/>
                <t t-call="commission_reports.report_commission_end_of_year"/>
            </body>
        </html>
    </template>

</odoo>