<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_commission_details_line">
        <t t-foreach="lines" t-as="l">
            <tr class="o_data_row">
                <!-- Salesman-->
                <td class="o_data_cell o_field_cell o_list_char o_readonly_modifier">
                    <span t-esc="l['salesman_name']"/>
                </td>
                <!-- Customer-->
                <td class="o_data_cell o_field_cell o_list_char o_readonly_modifier">
                    <span t-esc="l['partner_name']"/>
                </td>
                <!-- Invoice Number-->
                <td class="o_data_cell o_field_cell o_list_char o_readonly_modifier">
                    <span t-esc="l['invoice_number']"/>
                </td>
                <!-- Invoice Paid Date-->
                <td class="o_data_cell o_field_cell o_list_char o_readonly_modifier">
                    <span t-esc="l['invoice_paid_date']"/>
                </td>
                <!-- Invoice Date-->
                <td class="o_data_cell o_field_cell o_list_char o_readonly_modifier">
                    <span t-esc="l['invoice_date']"/>
                </td>
                <!-- Product-->
                <td class="o_data_cell o_field_cell o_list_char o_readonly_modifier">
                    <span t-esc="l['product_name']"/>
                </td>
                <!-- Zone2 Price-->
                <td class="o_data_cell o_field_cell o_list_char o_readonly_modifier">
                    <span t-esc="l['zone']"/>
                </td>
                <!-- QtyShipped-->
                <td class="o_data_cell o_field_cell o_list_number o_monetary_cell">
                    <span class="o_field_monetary o_field_number o_field_widget o_quick_editable text-bf"
                          t-esc="l['qty_delivered']"/>
                </td>
                <!-- Category Comm-->
                <td class="o_data_cell o_field_cell o_list_number o_monetary_cell">
                    <span class="o_field_monetary o_field_number o_field_widget o_quick_editable text-bf"
                          t-esc="l['product_category_commission']"/>
                </td>
                <!-- Category-->
                <td class="o_data_cell o_field_cell o_list_char o_readonly_modifier">
                    <span t-esc="l['product_category']"/>
                </td>
                <!-- Calculated Comm%-->
                <td class="o_data_cell o_field_cell o_list_number o_monetary_cell">
                    <span class="o_field_monetary o_field_number o_field_widget o_quick_editable text-bf"
                          t-esc="l['commission_percent']"/>
                </td>
                <!-- Earned Comm-->
                <td class="o_data_cell o_field_cell o_list_number o_monetary_cell">
                    <span class="o_field_monetary o_field_number o_field_widget o_quick_editable text-bf"
                          t-esc="l['commission_earned']"/>
                </td>
                <!-- Sold Price Total-->
                <td class="o_data_cell o_field_cell o_list_number o_monetary_cell">
                    <span class="o_field_monetary o_field_number o_field_widget o_quick_editable text-bf"
                          t-esc="l['product_price_unit']"/>
                </td>
                <!-- List Price Total-->
                <td class="o_data_cell o_field_cell o_list_number o_monetary_cell">
                    <span class="o_field_monetary o_field_number o_field_widget o_quick_editable text-bf"
                          t-esc="l['product_list_price']"/>
                </td>
                <!-- Discount-->
                <td class="o_data_cell o_field_cell o_list_number o_monetary_cell">
                    <span class="o_field_monetary o_field_number o_field_widget o_quick_editable text-bf"
                          t-esc="l['discount_amount']"/>
                </td>
                <!-- Cost Total-->
                <td class="o_data_cell o_field_cell o_list_number o_monetary_cell">
                    <span class="o_field_monetary o_field_number o_field_widget o_quick_editable text-bf"
                          t-esc="l['product_standard_price']"/>
                </td>
            </tr>
        </t>
    </template>

    <template id="report_commission_details">
        <div class="container-fluid o_commission_reports_page o_commission_reports_no_print">
            <t t-if="not lines">
                <span class="text-center">
                    <h1>No Records found</h1>
                </span>
            </t>
            <t t-if="lines">
                <div class="table-responsive">
                    <table class="table table-sm o_list_table o_main_table table-hover table-striped"
                           style="table-layout: fixed">
                        <thead>
                            <tr>
                                <th class="text-left">Salesman</th>
                                <th class="text-left">Customer</th>
                                <th class="text-left">Invoice Number</th>
                                <th class="text-left">Invoice Paid Date</th>
                                <th class="text-left">Invoice Date</th>
                                <th class="text-left">Product</th>
                                <th class="text-left">Zone</th>
                                <th class="o_monetary_cell o_list_number_th">QtyShipped</th>
                                <th class="o_monetary_cell o_list_number_th">Category Comm</th>
                                <th class="text-left">Category</th>
                                <th class="o_monetary_cell o_list_number_th">Calculated Comm%</th>
                                <th class="o_monetary_cell o_list_number_th">Earned Comm</th>
                                <th class="o_monetary_cell o_list_number_th">Sold Price Total</th>
                                <th class="o_monetary_cell o_list_number_th">List Price Total</th>
                                <th class="o_monetary_cell o_list_number_th">Discount</th>
                                <th class="o_monetary_cell o_list_number_th">Cost Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-call="commission_reports.report_commission_details_line"/>
                        </tbody>
                    </table>
                </div>
            </t>
        </div>
    </template>

    <template id="report_commission_details_print">
        <t t-call="web.html_container">
            <div class="page">
                <div class="oe_structure"/>
                <br/>
                <span t-if="lines" align="center" class="o_report_heading">
                    <h4>Commissions Details</h4>
                </span>
                <div class="o_row" align="right">
                    Date From:
                    <span class="mr-2" t-esc="context['options']['date_from']"/>
                    Date To:
                    <span class="mr-2" t-esc="context['options']['date_to']"/>
                </div>
                <br/>
                <t t-call="commission_reports.report_commission_details"/>
            </div>
        </t>
    </template>
</odoo>