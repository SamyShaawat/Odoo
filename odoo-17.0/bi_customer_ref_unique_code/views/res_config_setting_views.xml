<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_res_config_inherit_bi" model="ir.ui.view">
        <field name="name">view.res.config.inherit.bi</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='active_user_setting']" position="after">
                <setting id="customer_ref_unique_code_id">
                    <button class="btn btn-primary o_web_settings_invite" string="Generate Customer Code"
                            type="object" name="customer_code_button"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
