<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="armchem_sale_account_move_form" model="ir.ui.view">
            <field name="name">armchem.sale.account.move.form</field>
            <field name="model">account.move</field>
            <field name="priority">5</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_draft']" position="before">
                    <button name="action_compute_commission" type="object" string="Compute Commission"
                            title="Compute Commission"
                            invisible="move_type not in ('out_invoice', 'out_refund')"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position="before">
                    <field name="commission_earned" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='narration']" position="before">
                    <field name="total_commission_earned" readonly="1"
                           invisible="move_type not in ('out_invoice', 'out_refund', 'out_receipt')"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>