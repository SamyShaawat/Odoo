<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="armchem_sale_delivery_carrier_form" model="ir.ui.view">
            <field name="name">armchem.choose.sale.delivery.carrier.form</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='free_over']" position="after">
                    <field name="zone"/>
                </xpath>
            </field>
        </record>

        <record id="armchem_sale_choose_delivery_carrier_form" model="ir.ui.view">
            <field name="name">armchem.sale.delivery.carrier.form</field>
            <field name="model">choose.delivery.carrier</field>
            <field name="inherit_id" ref="delivery.choose_delivery_carrier_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='carrier_id']" position="after">
                    <field name="zone" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>